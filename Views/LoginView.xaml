<UserControl x:Class="BiblioGest.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:BiblioGest.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">

    <Grid Background="#E3F2FD">
        <Border Padding="25" Background="White" CornerRadius="15" Width="360" Height="290"
                HorizontalAlignment="Center" VerticalAlignment="Center" Effect="{DynamicResource DropShadowEffect}">
            <StackPanel>
                <TextBlock Text="🔐 Connexion" FontSize="24" FontWeight="Bold" Foreground="#1976D2"
                           Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="Identifiant" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Height="30" Margin="0,0,0,10" 
                         Background="#F0F0F0" BorderBrush="#CCC" BorderThickness="1"/>

                <TextBlock Text="Mot de passe" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PwdBox" Height="30" Margin="0,0,0,10" 
                             Background="#F0F0F0" BorderBrush="#CCC" BorderThickness="1"
                             PasswordChanged="PwdBox_PasswordChanged"/>

                <CheckBox Content="Se souvenir de moi" IsChecked="{Binding RememberMe}" Margin="0,0,0,10"/>

                <Button Content="Se connecter" Command="{Binding LoginCommand}" Height="40"
                        Background="#1976D2" Foreground="White" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>