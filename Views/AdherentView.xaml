<UserControl x:Class="BiblioGest.Views.AdherentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BiblioGest.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#F4F6F8">
        <Border Padding="20">
            <StackPanel>
                <TextBlock Text="👥 Gestion des Adhérents" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="#1976D2"/>

                <!-- Formulaire -->
                <WrapPanel Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <TextBlock Text="Nom" FontWeight="SemiBold"/>
                        <TextBox Width="120" Text="{Binding NewAdherent.Nom}" Background="White" BorderBrush="#90CAF9"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="Prénom" FontWeight="SemiBold"/>
                        <TextBox Width="120" Text="{Binding NewAdherent.Prenom}" Background="White" BorderBrush="#90CAF9"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="Adresse" FontWeight="SemiBold"/>
                        <TextBox Width="150" Text="{Binding NewAdherent.Adresse}" Background="White" BorderBrush="#90CAF9"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="Email" FontWeight="SemiBold"/>
                        <TextBox Width="150" Text="{Binding NewAdherent.Email}" Background="White" BorderBrush="#90CAF9"/>
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="Téléphone" FontWeight="SemiBold"/>
                        <TextBox Width="100" Text="{Binding NewAdherent.Telephone}" Background="White" BorderBrush="#90CAF9"/>
                    </StackPanel>
                </WrapPanel>

                <!-- Boutons -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="Ajouter" Command="{Binding AddAdherentCommand}" Width="100" Margin="5" Background="#43A047" Foreground="White"/>
                    <Button Content="Modifier" Command="{Binding UpdateAdherentCommand}" Width="100" Margin="5" Background="#1976D2" Foreground="White"/>
                    <Button Content="Supprimer" Command="{Binding DeleteAdherentCommand}" Width="100" Margin="5" Background="#E53935" Foreground="White"/>
                </StackPanel>

                <!-- Tableau -->
                <DataGrid ItemsSource="{Binding Adherents}" SelectedItem="{Binding SelectedAdherent}" AutoGenerateColumns="False" Height="300" 
                          GridLinesVisibility="Horizontal" RowBackground="White" AlternatingRowBackground="#E3F2FD" BorderBrush="#BBDEFB">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nom" Binding="{Binding Nom}"/>
                        <DataGridTextColumn Header="Prénom" Binding="{Binding Prenom}"/>
                        <DataGridTextColumn Header="Adresse" Binding="{Binding Adresse}"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                        <DataGridTextColumn Header="Téléphone" Binding="{Binding Telephone}"/>
                        <DataGridTextColumn Header="Inscription" Binding="{Binding DateInscription}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>