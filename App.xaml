<!-- App.xaml -->
<Application x:Class="BiblioGest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BiblioGest"
             StartupUri="MainWindow.xaml">
	<!-- Or MainAppView if that's your main host -->
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<!-- Merge your custom styles -->
				<ResourceDictionary Source="Styles/Styles.xaml"/>
				<!-- Adjust the path if your Styles.xaml is elsewhere -->
				<!-- You might have other resource dictionaries here -->
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>